{
  "data": {
    "1-data": {
      "type": "hiplot-textarea",
      "label": {
        "en": "Data Table",
        "zh_cn": "数据表"
      },
      "required": true
    }
  },
  "dataArg": {
    "1-data": [
      {
        "label": {
          "en": "x",
          "zh_cn": "x"
        },
        "required": true
      },
      {
        "label": {
          "en": "y",
          "zh_cn": "y"
        },
        "required": true
      },
      {
        "label": {
          "en": "Size",
          "zh_cn": "大小"
        },
        "required": true
      },
      {
        "label": {
          "en": "Group",
          "zh_cn": "分组"
        },
        "required": true
      }
    ]
  },
  "extra": {
    "rug_alpha": {
      "type": "slider",
      "label": {
        "en": "Rug Alpha",
        "zh_cn": "Rug 透明度"
      },
      "step": 0.01,
      "min": 0,
      "max": 1,
      "class": "col-12 col-md-6"
    },
    "rug_size": {
      "type": "slider",
      "label": {
        "en": "Rug Size",
        "zh_cn": "Rug 大小"
      },
      "step": 0.1,
      "min": 0,
      "max": 10,
      "class": "col-12 col-md-6"
    },
    "marginal_size": {
      "type": "slider",
      "label": {
        "en": "Marginal Size",
        "zh_cn": "边缘大小"
      },
      "step": 0.1,
      "min": 0,
      "max": 10,
      "class": "col-12 col-md-6"
    },
    "marginal_bins": {
      "type": "slider",
      "label": {
        "en": "Marginal Bins",
        "zh_cn": "边缘直方图柱数"
      },
      "step": 1,
      "min": 0,
      "max": 100,
      "class": "col-12 col-md-6"
    },
    "marginal_type": {
      "type": "select",
      "label": {
        "en": "Marginal Type",
        "zh_cn": "边缘类型"
      },
      "items": [
        "density",
        "histogram",
        "boxplot",
        "violin",
        "densigram"
      ],
      "class": "col-12"
    },
    "rug_color": {
      "type": "color-picker",
      "class": "col-12 col-md-4",
      "label": {
        "en": "Rug Color",
        "zh_cn": "Rug 颜色"
      }
    },
    "marginal_fill": {
      "type": "color-picker",
      "class": "col-12 col-md-4",
      "label": {
        "en": "Marginal Fill",
        "zh_cn": "边缘填充色"
      }
    },
    "marginal_color": {
      "type": "color-picker",
      "class": "col-12 col-md-4",
      "label": {
        "en": "Marginal Color",
        "zh_cn": "边缘色"
      }
    },
    "add_rug": {
      "type": "switch",
      "label": {
        "en": "Add Rug",
        "zh_cn": "添加 Rug"
      },
      "class": "col-12",
      "required": true
    }
  }
}
