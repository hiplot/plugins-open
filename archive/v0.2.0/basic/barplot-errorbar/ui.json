{
  "data": {
    "datTable": {
      "type": "hiplot-textarea",
      "required": true,
      "label": "messages.common.dataTable"
    }
  },
  "general": {
    "imageExportType": {
      "plotly": true
    }
  },
  "extra": {
    "pval": {
      "type": "select",
      "label": "messages.basic.common.pval",
      "items": [
        "value",
        "signif",
        "no"
      ],
      "class": "col-12 col-md-6"
    },
    "stat_method": {
      "type": "select",
      "label": "messages.basic.common.statMethod",
      "items": [
        "t.test",
        "wilcox.test",
        "anova",
        "kruskal.test"
      ],
      "class": "col-12 col-md-6"
    },
    "point": {
      "type": "switch",
      "label": "messages.basic.common.point",
      "class": "col-12 col-md-4"
    },
    "bar_colour": {
      "type": "color-picker",
      "label": {
        "en": "Bar Border Color",
        "zh_cn": "柱状图描边色"
      },
      "class": "col-12 col-md-4"
    },
    "errorbar_width": {
      "type": "slider",
      "label": {
        "en": "Errorbar Width",
        "zh_cn": "误差线宽度"
      },
      "class": "col-12",
      "max": 3,
      "step": 0.1
    }
  }
}
