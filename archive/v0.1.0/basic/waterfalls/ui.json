{
  "data": {
    "datTable": {
      "type": "hiplot-textarea",
      "required": true,
      "label": "messages.common.dataTable"
    }
  },
  "general": {
    "imageExportType": {
      "plotly": true
    }
  },
  "extra": {
    "rect_text_size": {
      "type": "slider",
      "label": {
        "zh_cn": "标签字体大小",
        "en": "Rect Text Size"
      },
      "class": "col-12 col-md-6",
      "min": 1,
      "max": 5,
      "step": 0.1
    },
    "rect_width": {
      "type": "slider",
      "label": {
        "zh_cn": "条形宽度",
        "en": "Bar Width"
      },
      "class": "col-12 col-md-6",
      "min": 0,
      "max": 1,
      "step": 0.01
