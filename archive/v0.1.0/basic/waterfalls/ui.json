    "linetype": {
      "type": "select",
      "label": {
        "zh_cn": "线条类型",
        "en": "Line Type"
      },
      "items": [1, 2, 3, 4, 5 ,6],
      "class": "col-12"
    },
    "calc_total": {
      "type": "switch",
      "label": {
        "zh_cn": "是否计算总数",
        "en": "Calculate Total"
      },
      "class": "col-12 col-md-4"
    },
    "fill_by_sign": {
      "type": "switch",
      "label": {
        "zh_cn": "正负值同色",
        "en": "Same Colour (Positive and Negative)"
      },
      "class": "col-12 col-md-6"
    }
